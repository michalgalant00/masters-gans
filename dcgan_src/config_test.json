{
  "dataset": {
    "base_path": "../01_dataset_prep/dataset-processed/final",
    "spectrograms_path": "spectrograms",
    "spectrograms_metadata": "spectrograms-metadata.csv",
    "use_dummy_data": false,
    "dummy_dataset_size": 100,
    "max_files_limit": 50
  },

  "model": {
    "latent_dim": 32,
    "features_g": 16,
    "features_d": 16,
    "image_size": 64,
    "channels": 1
  },

  "training": {
    "batch_size": 4,
    "epochs": 3,
    "learning_rate": 0.0002,
    "beta1": 0.5
  },

  "metrics_and_checkpoints": {
    "csv_write_frequency": 1,
    "detailed_logging_frequency": 5,
    "emergency_checkpoint_frequency": 50,
    "milestone_checkpoint_frequency": 200,
    "milestone_epoch_frequency": 2,
    "emergency_buffer_size": 3,
    "image_samples_per_checkpoint": 2,
    "best_model_improvement_threshold": 0.05,
    "key_epochs_first": 1,
    "key_epochs_last": 1
  },

  "logging": {
    "log_level": "INFO",
    "log_to_file": true,
    "log_directory": "logs",
    "log_to_console": false,
    "max_log_size_mb": 5
  },

  "hardware": {
    "device": "auto",
    "num_workers": 2,
    "pin_memory": true,
    "prefetch_factor": 2
  },

  "convergence": {
    "enabled": false,
    "min_iterations": 200,
    "check_frequency": 50,
    "patience": 150,
    "min_improvement": 0.0005,
    "loss_explosion_threshold": 200.0,
    "grad_norm_threshold": 2000.0
  },

  "advanced_metrics": {
    "enabled": false,
    "calculate_fid": false,
    "calculate_is": false,
    "fid_frequency": 5,
    "is_frequency": 5,
    "num_samples_for_metrics": 200
  },

  "output": {
    "base_output_dir": "output_dcgan_test",
    "models_dir": "models",
    "samples_dir": "samples",
    "metrics_dir": "metrics"
  }
}
